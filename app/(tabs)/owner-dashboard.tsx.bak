// app/(tabs)/owner-dashboard.tsx
import React, { useCallback, useEffect, useMemo, useState } from "react";
import {
  ActivityIndicator,
  Alert,
  StyleSheet,
  Text,
  TouchableOpacity,
  View,
} from "react-native";
import { useLocalSearchParams, useRouter } from "expo-router";
import {
  apiGet,
  hydrateAuthToken,
  requireRole,
} from "../../components/lib/api";

function toStr(x: any) {
  return typeof x === "string" ? x : Array.isArray(x) ? x[0] : "";
}

type WalletSummary = {
  id: number;
  userId: number;
  balanceCents: number;
  spendableBalanceCents: number;
  cashoutAvailableCents: number;
  createdAt?: string;
  updatedAt?: string;
};

type OwnerStatsTotal = {
  ordersCount?: number;
  amountCents?: number;
  feeCents?: number;
  payoutCents?: number;
};

type OwnerStatsByVenue = {
  venueId?: number;
  venueName?: string;
  ordersCount?: number;
  amountCents?: number;
  feeCents?: number;
  payoutCents?: number;
};

type OwnerDashboardResponse = {
  wallet?: WalletSummary;
  stats?: {
    total?: OwnerStatsTotal;
    byVenue?: OwnerStatsByVenue[];
  };
  recentOrders?: Array<{
    orderId?: number;
    createdAt?: string;
    status?: string;
    itemName?: string;
    quantity?: number;
    amountCents?: number;
    feeCents?: number;
    payoutCents?: number;
    buyerId?: number;
    venueId?: number;
    venueName?: string;
  }>;
};

function money(cents?: number) {
  const v = Number(cents ?? 0) || 0;
  return `$${(v / 100).toFixed(2)}`;
}

export default function OwnerDashboardScreen() {
  const router = useRouter();
  const params = useLocalSearchParams();
  const baseUrlFromUrl = toStr((params as any)?.baseUrl);

  // Base URL can still come from URL for convenience (api.ts uses its own BASE_URL;
  // this is just shown in console for debugging).
  const BASE_URL = useMemo(() => {
    const b = baseUrlFromUrl?.trim();
    return b && b.length > 0 ? b : "http://10.0.0.239:3000";
  }, [baseUrlFromUrl]);

  const [booting, setBooting] = useState(true);

  const [loading, setLoading] = useState(true);
  const [wallet, setWallet] = useState<WalletSummary | null>(null);

  const [statsTotal, setStatsTotal] = useState<OwnerStatsTotal | null>(null);
  const [statsByVenue, setStatsByVenue] = useState<OwnerStatsByVenue[]>([]);
  const [recentOrders, setRecentOrders] = useState<
    OwnerDashboardResponse["recentOrders"]
  >([]);

  const [dashError, setDashError] = useState<string | null>(null);

  // ðŸ”’ HARD GUARD (web-safe: hydrate token first)
  useEffect(() => {
    (async () => {
      try {
        await hydrateAuthToken();
        requireRole("owner");
      } catch (e: any) {
        console.error(String(e?.message || e));
        Alert.alert(
          "Access denied",
          "You are logged in as a buyer. Please log in with an owner account."
        );
        router.replace("/(tabs)");
      } finally {
        setBooting(false);
      }
    })();
  }, [router]);

  const fetchAll = useCallback(async () => {
    setDashError(null);
    setLoading(true);

    try {
      // âœ… Enforce owner role before any calls
      requireRole("owner");

      // Wallet summary
      const walletJson = (await apiGet("/wallet/summary")) as WalletSummary;
      setWallet(walletJson);

      // Owner dashboard (store-items)
      const dashJson = (await apiGet(
        "/store-items/owner/dashboard"
      )) as OwnerDashboardResponse;

      setStatsTotal(dashJson?.stats?.total ?? null);
      setStatsByVenue(
        Array.isArray(dashJson?.stats?.byVenue) ? dashJson!.stats!.byVenue! : []
      );
      setRecentOrders(
        Array.isArray(dashJson?.recentOrders) ? dashJson.recentOrders : []
      );

      console.log("[owner-dashboard] baseUrl =", BASE_URL);
      console.log("[owner-dashboard] dashboard =", dashJson);
    } catch (e: any) {
      setWallet(null);
      setStatsTotal(null);
      setStatsByVenue([]);
      setRecentOrders([]);
      setDashError(String(e?.message || e));
    } finally {
      setLoading(false);
    }
  }, [BASE_URL]);

  useEffect(() => {
    if (booting) return;
    fetchAll();
  }, [booting, fetchAll]);

  if (booting || loading) {
    return (
      <View style={styles.center}>
        <ActivityIndicator />
        <Text style={styles.muted}>Loading dashboardâ€¦</Text>
      </View>
    );
  }

  const ordersCount = statsTotal?.ordersCount ?? 0;
  const gross = statsTotal?.amountCents ?? 0;
  const fee = statsTotal?.feeCents ?? 0;
  const payout = statsTotal?.payoutCents ?? 0;

  return (
    <View style={styles.container}>
      <Text style={styles.title}>Owner Dashboard</Text>

      {dashError ? <Text style={styles.error}>{dashError}</Text> : null}

      {/* WALLET */}
      <View style={styles.block}>
        <Text style={styles.blockTitle}>OWNER WALLET</Text>
        <Text style={styles.bigMoney}>
          {wallet ? `$${(wallet.balanceCents / 100).toFixed(2)}` : "$0.00"}
        </Text>

        <View style={styles.row}>
          <View style={styles.pill}>
            <Text style={styles.pillLabel}>Spendable</Text>
            <Text style={styles.pillValue}>
              {wallet
                ? `$${(wallet.spendableBalanceCents / 100).toFixed(2)}`
                : "$0.00"}
            </Text>
          </View>

          <View style={styles.pill}>
            <Text style={styles.pillLabel}>Cashout-ready</Text>
            <Text style={styles.pillValue}>
              {wallet
                ? `$${(wallet.cashoutAvailableCents / 100).toFixed(2)}`
                : "$0.00"}
            </Text>
          </View>
        </View>
      </View>

      {/* STATS */}
      <View style={[styles.block, { marginTop: 12 }]}>
        <Text style={styles.blockTitle}>OWNER STATS (COMPLETED ORDERS)</Text>

        <View style={styles.statsRow}>
          <View style={styles.statCell}>
            <Text style={styles.statLabel}>Orders</Text>
            <Text style={styles.statValue}>{String(ordersCount)}</Text>
          </View>
          <View style={styles.statCell}>
            <Text style={styles.statLabel}>Gross</Text>
            <Text style={styles.statValue}>{money(gross)}</Text>
          </View>
          <View style={styles.statCell}>
            <Text style={styles.statLabel}>Fee</Text>
            <Text style={styles.statValue}>{money(fee)}</Text>
          </View>
          <View style={styles.statCell}>
            <Text style={styles.statLabel}>Payout</Text>
            <Text style={styles.statValue}>{money(payout)}</Text>
          </View>
        </View>

        {statsByVenue.length > 0 ? (
          <View style={{ marginTop: 10 }}>
            <Text style={[styles.muted, { fontSize: 12, marginBottom: 6 }]}>
              By venue:
            </Text>
            {statsByVenue.slice(0, 5).map((v, idx) => (
              <Text
                key={`${v.venueId ?? idx}`}
                style={[styles.muted, { fontSize: 12 }]}
              >
                â€¢ {v.venueName ?? `Venue ${v.venueId ?? "?"}`}:{" "}
                {String(v.ordersCount ?? 0)} orders, payout{" "}
                {money(v.payoutCents ?? 0)}
              </Text>
            ))}
          </View>
        ) : null}
      </View>

      {/* RECENT ORDERS */}
      <View style={[styles.block, { marginTop: 12 }]}>
        <Text style={styles.blockTitle}>RECENT ORDERS</Text>

        {recentOrders && recentOrders.length > 0 ? (
          recentOrders.slice(0, 6).map((o, idx) => (
            <View
              key={`${o?.orderId ?? idx}`}
              style={styles.orderRow}
            >
              <Text style={styles.orderTitle}>
                #{o?.orderId ?? "-"} â€¢ {o?.itemName ?? "-"} â€¢{" "}
                {money(o?.payoutCents ?? 0)}
              </Text>
              <Text style={styles.orderMeta}>
                {o?.venueName ?? "Unknown venue"} â€¢ {o?.status ?? "-"} â€¢{" "}
                {o?.createdAt ?? "-"}
              </Text>
            </View>
          ))
        ) : (
          <Text style={styles.muted}>No recent orders.</Text>
        )}
      </View>

      <TouchableOpacity onPress={fetchAll} style={styles.refreshBtn}>
        <Text style={styles.refreshText}>Refresh</Text>
      </TouchableOpacity>
    </View>
  );
}

const styles = StyleSheet.create({
  container: { flex: 1, padding: 16 },
  title: { fontSize: 22, fontWeight: "700", marginBottom: 8 },
  center: { flex: 1, alignItems: "center", justifyContent: "center", gap: 8 },
  muted: { opacity: 0.7 },
  error: { color: "#ff4d4f", marginBottom: 10 },

  block: {
    borderWidth: 1,
    borderColor: "rgba(0,0,0,0.15)",
    borderRadius: 12,
    padding: 14,
  },
  blockTitle: { fontWeight: "700", marginBottom: 8, opacity: 0.8 },
  bigMoney: { fontSize: 28, fontWeight: "800", marginBottom: 10 },

  row: { flexDirection: "row", gap: 10 },
  pill: {
    flex: 1,
    borderWidth: 1,
    borderColor: "rgba(0,0,0,0.12)",
    borderRadius: 999,
    paddingVertical: 10,
    paddingHorizontal: 12,
  },
  pillLabel: { fontSize: 12, opacity: 0.75 },
  pillValue: { fontSize: 16, fontWeight: "700" },

  statsRow: { flexDirection: "row", flexWrap: "wrap", gap: 10 },
  statCell: {
    borderWidth: 1,
    borderColor: "rgba(0,0,0,0.10)",
    borderRadius: 10,
    paddingVertical: 10,
    paddingHorizontal: 12,
    minWidth: 120,
  },
  statLabel: { fontSize: 12, opacity: 0.75 },
  statValue: { fontSize: 16, fontWeight: "800", marginTop: 2 },

  orderRow: {
    paddingVertical: 8,
    borderTopWidth: 1,
    borderTopColor: "rgba(0,0,0,0.08)",
  },
  orderTitle: { fontWeight: "700" },
  orderMeta: { opacity: 0.7, marginTop: 2, fontSize: 12 },

  refreshBtn: {
    marginTop: 14,
    borderWidth: 1,
    borderColor: "rgba(0,0,0,0.15)",
    borderRadius: 10,
    paddingVertical: 10,
    alignItems: "center",
  },
  refreshText: { fontWeight: "700" },
});
